body {
    font-family: Arial, sans-serif;
    line-height: 1.6;
}

h1, h2 {
    color: #333;
}

/* Indent the first line of all paragraphs except the first */
section p + p::first-line {
    text-indent: 20px;
}

/* Styling for the section containing the reflection content */
section {
    padding: 20px;
    margin: 20px;
    background-color: #f9f9f9;
}

/* Styling for the footer */
footer {
    text-align: center;
    padding: 10px;
    background-color: #333;
    color: #fff;
}
